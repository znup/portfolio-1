---
import NextIcon from "../icons/Nextjs.astro"
import TailwindIcon from "../icons/Tailwind.astro"
import SocialPill from "./SocialPill.astro"
import Spacer from "./Spacer.astro"

const TAGS = {
  NEXT: {
    name: 'Next.js',
    class: 'bg-gray-800 text-white',
    icon: NextIcon,
  },
  TAILWIND: {
    name: 'Tailwind',
    class: 'bg-gray-800 text-white',
    icon: TailwindIcon,
  }
}

const PROJECTS = [
  {
    title: 'SVGL - A beautiful library for SVGs',
    description: 'A beautiful library for SVGs with support for React, Next.js, Svelte, and Tailwind CSS.',
    link: 'https://svgl.vercel.app',
    github: 'https://github.com/pheralb/svgl',
    image: 'imgOpti.jpg',
    tags: [TAGS.NEXT, TAGS.TAILWIND ]
  }
]
---

<div>
  {
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
      <article>
        <h3 class="text-purple-300 font-semibold">{title}</h3>
        <p class="text-gray-400">{description}</p>
        <ul class="flex flex-col lg:flex-row flex-wrap gap-2">
          <Spacer class="py-1"/>
          
            <Spacer class="lg:py-5"/>
          {
            tags.map((tag) => (
              <li class="text-gray-500">
                <span class={`flex items-center gap-x-2 w-1/3 rounded-full px-2 py-0.5 ${tag.class}`}>
                  {tag.name}
                  <tag.icon class="size-5" />
                </span>
              </li>
            ))
          }
        </ul>
        <img src={image} alt={`Captura de pantalla del proyecto ${image}`}  class="py-4 rounded-xl"/>
      </article>
    ))
  }
</div>